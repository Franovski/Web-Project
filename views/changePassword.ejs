<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <title>Change Password | TicketHaven</title>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Bootstrap Icons -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: system-ui, -apple-system, "Segoe UI", Roboto,
          "Helvetica Neue", Arial, sans-serif;
      }
      .form-card {
        background-color: #ffffff;
        border: none;
        border-radius: 0.75rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
      }
      .form-card .form-control:focus {
        border-color: rgb(220 53 69);
        box-shadow: 0 0 0 0.2rem rgba(220, 53 69, 0.25);
      }
      .form-card .btn-danger {
        background-color: rgb(220 53 69);
        border-color: rgb(220 53 69);
      }
      .form-card .btn-danger:hover {
        background-color: rgb(220 53 69);
        border-color: rgb(220 53 69);
      }
    </style>
  </head>

  <body class="bg-dark">
    <div
      class="d-flex align-items-center justify-content-center min-vh-100 px-3"
    >
      <div class="w-100" style="max-width: 400px">
        <form
          action="/api/users/password"
          method="POST"
          class="form-card p-3 p-sm-4"
        >
          <!-- Title -->
          <div class="text-center mb-3">
            <a href="/">
              <img
                src="/images/istockphoto-1414997110-612x612.jpg"
                alt="TicketHaven Logo"
                width="48"
                height="48"
                class="mb-2 rounded-circle"
              />
            </a>
            <h2 class="fw-bold mb-1">Change Password</h2>
            <p class="text-muted small mb-2">
              Enter your email, current password, and new password
            </p>
          </div>

          <!-- Success message (if defined) -->
          <% if (typeof success !== 'undefined' && success) { %>
            <div class="alert alert-success text-center mb-3" role="alert">
              <%= success %>
            </div>
          <% } %>

          <!-- Error message (if defined) -->
          <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger text-center mb-3" role="alert">
              <%= error %>
            </div>
          <% } %>

          <!-- Email (visible input, pre-filled if user.email exists) -->
          <div class="input-group mb-3">
            <span class="input-group-text bg-white rounded-start-3">
              <i class="bi bi-envelope"></i>
            </span>
            <div class="form-floating flex-grow-1 mb-0">
              <input
                type="email"
                name="email"
                class="form-control rounded-end-0"
                id="floatingEmail"
                placeholder="user@example.com"
                value="<%= (typeof user !== 'undefined' && user.email) ? user.email : '' %>"
                required
              />
              <label for="floatingEmail">Email Address</label>
            </div>
          </div>

          <!-- Current Password -->
          <div class="input-group mb-3">
            <span
              class="input-group-text bg-white rounded-start-3"
            >
              <i class="bi bi-lock"></i>
            </span>
            <div class="form-floating flex-grow-1 mb-0">
              <input
                type="password"
                name="oldPassword"
                class="form-control rounded-end-0"
                id="floatingCurrentPassword"
                placeholder="Current Password"
                required
              />
              <label for="floatingCurrentPassword">Current Password</label>
            </div>
            <button
              class="btn btn-outline-secondary rounded-end-3"
              type="button"
              id="toggleCurrentPassword"
            >
              <i class="bi bi-eye"></i>
            </button>
          </div>

          <!-- New Password -->
          <div class="input-group mb-3">
            <span
              class="input-group-text bg-white rounded-start-3"
            >
              <i class="bi bi-key"></i>
            </span>
            <div class="form-floating flex-grow-1 mb-0">
              <input
                type="password"
                name="newPassword"
                class="form-control rounded-end-0"
                id="floatingNewPassword"
                placeholder="New Password"
                required
              />
              <label for="floatingNewPassword">New Password</label>
            </div>
            <button
              class="btn btn-outline-secondary rounded-end-3"
              type="button"
              id="toggleNewPassword"
            >
              <i class="bi bi-eye"></i>
            </button>
          </div>

          <!-- Change Password Button -->
          <button
            class="w-100 btn btn-danger btn-lg rounded-3 mb-2"
            type="submit"
          >
            Change Password
          </button>

          <!-- Back to Profile Link -->
          <div class="text-center small">
            <a href="/" class="text-secondary">Back to Home Page</a>
          </div>
        </form>
      </div>
    </div>

    <!-- Toggle Password Visibility Scripts -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    ></script>
    <script>
      // Toggle current password visibility
      document
        .getElementById("toggleCurrentPassword")
        .addEventListener("click", function () {
          const pwd = document.getElementById("floatingCurrentPassword");
          const icon = this.querySelector("i");
          if (pwd.type === "password") {
            pwd.type = "text";
            icon.classList.replace("bi-eye", "bi-eye-slash");
          } else {
            pwd.type = "password";
            icon.classList.replace("bi-eye-slash", "bi-eye");
          }
        });

      // Toggle new password visibility
      document
        .getElementById("toggleNewPassword")
        .addEventListener("click", function () {
          const pwd = document.getElementById("floatingNewPassword");
          const icon = this.querySelector("i");
          if (pwd.type === "password") {
            pwd.type = "text";
            icon.classList.replace("bi-eye", "bi-eye-slash");
          } else {
            pwd.type = "password";
            icon.classList.replace("bi-eye-slash", "bi-eye");
          }
        });
    </script>
  </body>
</html>
