<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= title || 'Admin Dashboard â€” TicketHaven' %></title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7"
      crossorigin="anonymous"
    />
    <style>
      body.bg-dark {
        background-color: #121212 !important;
      }
      @media (max-width: 768px) {
        .hero-section {
          height: 50vh !important;
        }
        .hero-section h1 {
          font-size: 2rem !important;
        }
        .hero-section p {
          font-size: 1rem !important;
        }
      }

      /* Enhanced Event Cards (Glassmorphism Style) */
      .event-glass-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        display: flex;
        flex-direction: column;
        height: 100%;
      }

      .event-glass-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 12px 28px rgba(0, 0, 0, 0.35);
      }

      .event-img-wrapper {
        position: relative;
        height: 220px;
        overflow: hidden;
      }

      .event-img-wrapper img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: brightness(0.8);
      }

      .event-badge {
        position: absolute;
        top: 12px;
        right: 12px;
        background: #dc3545;
        color: white;
        font-size: 0.85rem;
        font-weight: 600;
        padding: 6px 12px;
        border-radius: 12px;
        z-index: 2;
      }

      .event-glass-body {
        padding: 1.5rem;
        color: #f8f9fa;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
      }

      .event-glass-title {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
      }

      .event-glass-date {
        font-size: 0.95rem;
        color: #ffc107;
        margin-bottom: 0.75rem;
      }

      .event-glass-description {
        font-size: 1rem;
        color: #ced4da;
        line-height: 1.5;
      }

      /* Admin Controls */
      .admin-actions {
        margin-bottom: 2rem;
        text-align: center;
      }
      .admin-actions .btn {
        margin: 0 10px 10px 10px;
      }
    </style>
  </head>
  <body class="bg-dark">
    <!-- header & nav -->
    <%- include('partials/adminHeader') %>

    <main>
      <div class="container my-5">
        <h1 class="text-danger text-center mb-4">Admin Dashboard</h1>

        <div class="admin-actions">
          <a href="/admin/events/create" class="btn btn-danger btn-lg fw-bold">
            + Create New Event
          </a>
          <a
            href="/admin/events/manage"
            class="btn btn-outline-danger btn-lg fw-bold"
          >
            Manage Events
          </a>
          <a
            href="/admin/users"
            class="btn btn-outline-secondary btn-lg fw-bold"
          >
            Manage Users
          </a>
        </div>

        <h2 class="text-light mb-4">Upcoming Events</h2>

        <div class="row g-4">
          <!-- Example Event Card -->
          <% upcomingEvents.forEach(event => { %>
          <div class="col-md-6 col-lg-4">
            <div class="event-glass-card">
              <div class="event-img-wrapper">
                <img src="<%= event.imageUrl %>" alt="<%= event.title %>" />
                <% if (event.isFeatured) { %>
                <span class="event-badge">Featured</span>
                <% } %>
              </div>
              <div class="event-glass-body">
                <h5 class="event-glass-title"><%= event.title %></h5>
                <p class="event-glass-date"><%= event.dateFormatted %></p>
                <p class="event-glass-description"><%= event.description %></p>
                <div class="d-flex justify-content-between mt-3">
                  <a
                    href="/admin/events/edit/<%= event.id %>"
                    class="btn btn-sm btn-outline-warning"
                    >Edit</a
                  >
                  <form
                    action="/admin/events/delete/<%= event.id %>"
                    method="POST"
                    onsubmit="return confirm('Are you sure?');"
                  >
                    <button type="submit" class="btn btn-sm btn-outline-danger">
                      Delete
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </main>

    <!-- footer -->
    <%- include('partials/adminFooter') %>

    <script>
      // Optional: Reveal effect on scroll
      const cards = document.querySelectorAll(".event-glass-card");

      window.addEventListener("scroll", () => {
        cards.forEach((card) => {
          const rect = card.getBoundingClientRect();
          if (rect.top <= window.innerHeight - 100) {
            card.classList.add("visible");
          }
        });
      });
    </script>
  </body>
</html>
