<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Event â€” TicketHaven Admin</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css"
      rel="stylesheet"
      crossorigin="anonymous"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <style>
      :root {
        --primary-color: #dc3545;
        --secondary-color: #6c757d;
        --accent-color: #ffc107;
      }
      body {
        background-color: #121212;
        color: #f8f9fa;
        font-family: "Segoe UI", system-ui, sans-serif;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }
      main {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 1rem;
      }
      .card {
        max-width: 600px;
        width: 100%;
        border-radius: 1.25rem;
        border: none;
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.3),
          0 4px 6px -4px rgba(0, 0, 0, 0.2);
      }
      .card-header {
        background: linear-gradient(135deg, var(--primary-color), #7b1c1c);
        color: #fff;
        border-top-left-radius: 1.25rem;
        border-top-right-radius: 1.25rem;
        padding: 1rem 1.5rem;
        font-size: 1.5rem;
        font-weight: 600;
      }
      h5.section-title {
        color: var(--accent-color);
        margin-top: 1.5rem;
        margin-bottom: 0.5rem;
        font-weight: 600;
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        padding-bottom: 0.25rem;
      }
      .form-control,
      .form-select {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid #343a40;
        color: #f8f9fa;
        border-radius: 0.75rem;
        padding: 0.75rem 1rem;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
      }
      .form-control:focus,
      .form-select:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 3px rgba(220, 53, 69, 0.2);
      }
      .btn-submit {
        background: linear-gradient(135deg, var(--primary-color), #7b1c1c);
        border: none;
        border-radius: 0.75rem;
        padding: 0.75rem 2rem;
        color: #fff;
        font-weight: 600;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
      }
      .btn-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 15px rgba(220, 53, 69, 0.4);
      }
      .error-alert {
        background: rgba(220, 53, 69, 0.2);
        border: 1px solid rgba(220, 53, 69, 0.5);
        color: #ffc9cb;
        border-radius: 0.75rem;
        padding: 0.75rem 1rem;
        margin-bottom: 1rem;
      }
    </style>
  </head>
  <body>
    <%- include('partials/adminHeader') %>

    <main>
      <div class="card">
        <div class="card-header text-center">
          <i class="bi bi-calendar-plus-fill me-2"></i>
          Create New Event
        </div>
        <div class="card-body">
          <% if (typeof error !== 'undefined' && error) { %>
          <div
            class="alert alert-danger alert-dismissible fade show"
            role="alert"
          >
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <%= error %>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="alert"
              aria-label="Close"
            ></button>
          </div>
          <% } %>

          <!-- Admin Action Buttons -->
          <div class="mb-4 d-flex flex-wrap justify-content-center gap-3">
            <a href="/admin/tickets/create" class="btn btn-outline-light">
              <i class="bi bi-ticket-detailed-fill me-1"></i> Create Ticket
            </a>
            <a href="/admin/categories/create" class="btn btn-outline-light">
              <i class="bi bi-folder-plus me-1"></i> Create Category
            </a>
            <a href="/admin/sections/create" class="btn btn-outline-light">
              <i class="bi bi-layout-sidebar-inset-reverse me-1"></i> Create
              Section
            </a>
            <a href="/admin/transactions/create" class="btn btn-outline-light">
              <i class="bi bi-cash-coin me-1"></i> Create Transaction
            </a>
          </div>

          <form action="/api/events/createEvent" method="POST" class="row g-3">
            <!-- 1. Event Name -->
            <div class="col-12">
              <label class="form-label text-light">Event Name</label>
              <input type="text" name="name" required class="form-control" />
            </div>

            <!-- 2. Date -->
            <div class="col-md-6">
              <label class="form-label text-light">Date</label>
              <input
                type="text"
                name="date"
                required
                class="form-control"
                placeholder="YYYY-MM-DD"
                pattern="\d{4}-\d{2}-\d{2}"
                title="YYYY-MM-DD"
              />
            </div>

            <!-- 3. Time -->
            <div class="col-md-6">
              <label class="form-label text-light">Time</label>
              <input
                type="text"
                name="time"
                required
                class="form-control"
                placeholder="HH:MM:SS"
                pattern="([01]\d|2[0-3]):[0-5]\d:[0-5]\d"
                title="HH:MM:SS (24-hour)"
              />
            </div>

            <!-- 4. Location -->
            <div class="col-12">
              <label class="form-label text-light">Location</label>
              <input
                type="text"
                name="location"
                required
                class="form-control"
              />
            </div>

            <!-- 5. Capacity -->
            <div class="col-md-6">
              <label class="form-label text-light">Capacity</label>
              <input
                type="number"
                name="capacity"
                min="1"
                required
                class="form-control"
              />
            </div>

            <!-- 6. Status -->
            <div class="col-md-6">
              <label class="form-label text-light">Status</label>
              <select name="status" required class="form-select">
                <option value="Active">Active</option>
                <option value="Cancelled">Cancelled</option>
              </select>
            </div>

            <!-- 7. Description (optional) -->
            <div class="col-12">
              <label class="form-label text-light">Description</label>
              <textarea
                name="description"
                rows="3"
                class="form-control"
              ></textarea>
            </div>

            <!-- 8. Image URL (optional) -->
            <div class="col-12">
              <label class="form-label text-light">Image URL</label>
              <input type="url" name="image" class="form-control" />
            </div>

            <!-- 9. Category ID (enter number) -->
            <div class="col-12">
              <label class="form-label text-light">Category ID</label>
              <input
                type="number"
                name="categoryId"
                required
                class="form-control"
                placeholder="Enter category ID (e.g. 1)"
                min="1"
              />
            </div>

            <!-- Submit Button -->
            <div class="col-12 text-center mt-4">
              <button type="submit" class="btn-submit">
                <i class="bi bi-check-circle-fill me-1"></i> Create Event
              </button>
            </div>
          </form>
        </div>
      </div>
    </main>

    <%- include('partials/adminFooter') %>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
