<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Edit Event â€” TicketHaven Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css"
      rel="stylesheet"
      crossorigin="anonymous"
    />
    <style>
      html, body {
        background: #121212;
        color: #f8f9fa;
        margin: 0;
        height: 100%;
        font-family: "Segoe UI", sans-serif;
      }
      .wrapper {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }
      .content {
        flex: 1;
        padding: 2rem;
        max-width: 800px;
        margin: auto;
      }
      h2 {
        color: #ffc107;
        text-align: center;
        margin-bottom: 1.5rem;
      }
      .form-section {
        background: #1e1e1e;
        padding: 1.5rem;
        border-radius: 0.75rem;
      }
      label {
        color: #ccc;
        font-weight: 600;
      }
      .form-control, .form-select {
        background: #2a2a2a;
        color: #fff;
        border: 1px solid #444;
        margin-bottom: 1rem;
      }
      .btn-save {
        background: #ffc107;
        color: #000;
        border: none;
        width: 100%;
        padding: 0.75rem;
        font-weight: 600;
        border-radius: 0.5rem;
      }
      .btn-save:hover {
        background: #e0a800;
      }
    </style>
  </head>
  <body>
    <div class="wrapper">
      <div class="content">
        <%- include('partials/adminHeader') %>

        <h2>Edit Event: <%= event.name %></h2>

        <form
          action="api/events/admin/events/update/<%= event.id %>"
          method="POST"
          class="form-section"
        >
          <label for="name">Event Name</label>
          <input
            id="name"
            name="name"
            type="text"
            class="form-control"
            value="<%= event.name %>"
            required
          />

          <div class="row g-3">
            <div class="col-md-6">
              <label for="date">Date</label>
              <input
                id="date"
                name="date"
                type="date"
                class="form-control"
                value="<%= event.date %>"
                required
              />
            </div>
            <div class="col-md-6">
              <label for="time">Time</label>
              <input
                id="time"
                name="time"
                type="time"
                class="form-control"
                value="<%= event.time %>"
                required
              />
            </div>
          </div>

          <label for="location">Location</label>
          <input
            id="location"
            name="location"
            type="text"
            class="form-control"
            value="<%= event.location %>"
          />

          <div class="row g-3">
            <div class="col-md-4">
              <label for="capacity">Capacity</label>
              <input
                id="capacity"
                name="capacity"
                type="number"
                class="form-control"
                min="0"
                value="<%= event.capacity %>"
              />
            </div>
            <div class="col-md-4">
              <label for="status">Status</label>
              <select id="status" name="status" class="form-select">
                <option value="Active" <%= event.status==='Active'?'selected':'' %>>
                  Active
                </option>
                <option value="Cancelled" <%= event.status==='Cancelled'?'selected':'' %>>
                  Cancelled
                </option>
              </select>
            </div>
            <div class="col-md-4">
              <label for="categoryId">Category ID</label>
              <input
                id="categoryId"
                name="categoryId"
                type="number"
                class="form-control"
                min="1"
                value="<%= event.categoryId %>"
              />
            </div>
          </div>

          <label for="image">Image URL</label>
          <input
            id="image"
            name="image"
            type="url"
            class="form-control"
            value="<%= event.image %>"
          />

          <label for="description">Description</label>
          <textarea
            id="description"
            name="description"
            rows="4"
            class="form-control"
          ><%= event.description %></textarea>

          <button type="submit" class="btn-save mt-3">
            <i class="bi bi-save me-1"></i>
            Save Changes
          </button>
        </form>
      </div>

      <footer>
        <%- include('partials/adminFooter') %>
      </footer>
    </div>
  </body>
</html>
