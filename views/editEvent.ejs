<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Edit Event â€” TicketHaven Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css"
      rel="stylesheet"
      crossorigin="anonymous"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <style>
      :root {
        --primary-color: #dc3545;
        --bg-dark: #121212;
        --card-bg: #1f1f1f;
        --input-bg: #2c2c2c;
        --input-border: #444;
        --text-light: #f8f9fa;
        --highlight: #ffc107;
      }

      body {
        background-color: var(--bg-dark);
        color: var(--text-light);
        font-family: "Segoe UI", system-ui, sans-serif;
        margin: 0;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }

      main {
        flex: 1;
        padding: 3rem 1rem;
        display: flex;
        justify-content: center;
        align-items: flex-start;
      }

      .card {
        width: 100%;
        max-width: 800px;
        background-color: var(--card-bg);
        border-radius: 1rem;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
        overflow: hidden;
      }

      .card-header {
        background-color: var(--primary-color);
        color: white;
        padding: 1rem 1.5rem;
        font-size: 1.4rem;
        font-weight: 600;
        display: flex;
        align-items: center;
      }

      .card-header i {
        margin-right: 0.5rem;
      }

      .card-body {
        padding: 2rem;
      }

      label {
        font-weight: 500;
        margin-bottom: 0.3rem;
      }

      .form-control,
      .form-select {
        background-color: var(--input-bg);
        border: 1px solid var(--input-border);
        color: var(--text-light);
        border-radius: 0.5rem;
      }

      .form-control:focus,
      .form-select:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25);
      }

      .btn-submit {
        background-color: var(--primary-color);
        color: white;
        padding: 0.75rem 2rem;
        font-weight: 600;
        border: none;
        border-radius: 0.5rem;
        transition: background 0.2s ease, transform 0.2s ease;
      }

      .btn-submit:hover {
        background-color: #b42a38;
        transform: translateY(-2px);
      }

      textarea.form-control {
        resize: vertical;
      }
    </style>
  </head>
  <body>
    <%- include('partials/adminHeader') %>

    <main>
      <div class="card">
        <div class="card-header">
          <i class="bi bi-pencil-square"></i> Edit Event: <%= event.name %>
        </div>
        <div class="card-body">
          <form
            action="/api/events/updateEvent/<%= event.id %>"
            method="POST"
            class="row g-4"
          >
            <div class="col-md-6">
              <label class="form-label text-light">Event Name</label>
              <input
                type="text"
                name="name"
                required
                value="<%= event.name %>"
                class="form-control"
              />
            </div>

            <div class="col-md-3">
              <label class="form-label text-light">Date</label>
              <input
                type="text"
                name="date"
                required
                class="form-control"
                value="<%= event.date %>"
                placeholder="YYYY-MM-DD"
                pattern="\d{4}-\d{2}-\d{2}"
              />
            </div>

            <div class="col-md-3">
              <label class="form-label text-light">Time</label>
              <input
                type="text"
                name="time"
                required
                class="form-control"
                value="<%= event.time %>"
                placeholder="HH:MM:SS"
                pattern="([01]\d|2[0-3]):[0-5]\d:[0-5]\d"
              />
            </div>

            <div class="col-12">
              <label class="form-label text-light">Location</label>
              <input
                type="text"
                name="location"
                class="form-control"
                value="<%= event.location %>"
                required
              />
            </div>

            <div class="col-md-6">
              <label class="form-label text-light">Capacity</label>
              <input
                type="number"
                name="capacity"
                min="1"
                class="form-control"
                value="<%= event.capacity %>"
                required
              />
            </div>

            <div class="col-md-6">
              <label class="form-label text-light">Status</label>
              <select name="status" class="form-select" required>
                <option value="Active" <%= event.status === "Active" ? "selected" : "" %>>Active</option>
                <option value="Cancelled" <%= event.status === "Cancelled" ? "selected" : "" %>>Cancelled</option>
              </select>
            </div>

            <div class="col-12">
              <label class="form-label text-light">Description</label>
              <textarea
                name="description"
                rows="3"
                class="form-control"
              ><%= event.description %></textarea>
            </div>

            <div class="col-12">
              <label class="form-label text-light">Image URL</label>
              <input
                type="url"
                name="image"
                class="form-control"
                value="<%= event.image %>"
              />
            </div>

            <div class="col-12">
              <label class="form-label text-light">Category ID</label>
              <input
                type="number"
                name="categoryId"
                required
                class="form-control"
                min="1"
                value="<%= event.categoryId %>"
              />
            </div>

            <div class="col-12 text-center mt-3">
              <button type="submit" class="btn-submit">
                <i class="bi bi-save-fill me-1"></i> Save Changes
              </button>
            </div>
          </form>
        </div>
      </div>
    </main>

    <%- include('partials/adminFooter') %>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
