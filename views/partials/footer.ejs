<link
  href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css"
  rel="stylesheet"
/>

<style>
  /* Ensure the page takes up the full height */
  html,
  body {
    height: 100%;
    margin: 0;
  }

  /* Footer should stay at the bottom */
  .footer-container {
    margin-top: auto;
  }
</style>

<div class="container">
  <!-- 4‑column footer: no border -->
  <footer class="row row-cols-1 row-cols-sm-2 row-cols-md-4 py-5 text-white">
    <!-- TicketHaven -->
    <div class="col mb-3">
      <a
        href="/"
        class="d-flex align-items-center mb-3 text-decoration-none"
        aria-label="TicketHaven"
      >
        <svg class="bi me-2" width="40" height="32" aria-hidden="true">
          <use xlink:href="#bootstrap"></use>
        </svg>
        <img
          src="/images/istockphoto-1414997110-612x612.jpg"
          alt="TicketHaven Logo"
          width="32"
          height="32"
          class="me-2 rounded-circle"
          style="object-fit: cover"
        />
        <span class="fs-5 fw-bold text-secondary">TicketHaven</span>
      </a>
      <p class="small">
        The official ticketing platform for all Franovski events.
      </p>
    </div>

    <!-- Discover -->
    <div class="col mb-3">
      <h5 class="text-danger">Discover</h5>
      <ul class="list-unstyled">
        <li>
          <a href="/api/events/viewEvents" class="text-white text-decoration-none"
            >All Events</a
          >
        </li>
        <li>
          <a href="/locations" class="text-white text-decoration-none"
            >Locations</a
          >
        </li>
        <li>
          <a href="/calendar" class="text-white text-decoration-none"
            >Calendar</a
          >
        </li>
        <li>
          <a href="/categories" class="text-white text-decoration-none"
            >Categories</a
          >
        </li>
      </ul>
    </div>

    <!-- Account -->
    <div class="col mb-3">
      <h5 class="text-danger">Account</h5>
      <ul class="list-unstyled">
        <li>
          <a href="/account" class="text-white text-decoration-none"
            >My Account</a
          >
        </li>
        <li>
          <a href="/orders" class="text-white text-decoration-none"
            >My Orders</a
          >
        </li>
        <li>
          <a href="/signin" class="text-white text-decoration-none">Sign In</a>
        </li>
      </ul>
    </div>

    <!-- Help -->
    <div class="col mb-3">
      <h5 class="text-danger">Help</h5>
      <ul class="list-unstyled">
        <li><a href="/faq" class="text-white text-decoration-none">FAQ</a></li>
        <li>
          <a href="/contactus" class="text-white text-decoration-none"
            >Contact Us</a
          >
        </li>
        <li>
          <a href="/terms" class="text-white text-decoration-none"
            >Terms of Service</a
          >
        </li>
        <li>
          <a href="/privacy" class="text-white text-decoration-none"
            >Privacy Policy</a
          >
        </li>
      </ul>
    </div>
  </footer>

  <!-- Copyright & social: only one border atop -->
  <footer
    class="d-flex flex-wrap justify-content-between align-items-center py-3 border-top text-white footer-container"
  >
    <div class="d-flex align-items-center">
      <a
        href="/"
        class="me-2 text-white text-decoration-none lh-1"
        aria-label="TicketHaven"
      >
        <svg class="bi" width="30" height="24" aria-hidden="true">
          <use xlink:href="#bootstrap"></use>
        </svg>
      </a>
      <span>
        © <%= new Date().getFullYear() %> TicketHaven by Franovski. All rights
        reserved.
      </span>
    </div>

    <ul class="nav list-unstyled d-flex mb-0">
      <li class="ms-3">
        <a
          class="text-white"
          href="https://www.instagram.com/"
          target="_blank"
          aria-label="Instagram"
        >
          <i class="bi bi-instagram" style="font-size: 1.5rem"></i>
        </a>
      </li>
      <li class="ms-3">
        <a
          class="text-white"
          href="https://www.facebook.com/"
          target="_blank"
          aria-label="Facebook"
        >
          <i class="bi bi-facebook" style="font-size: 1.5rem"></i>
        </a>
      </li>
    </ul>
  </footer>
</div>
