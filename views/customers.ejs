<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Manage Customers - TicketHaven</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css"
      rel="stylesheet"
      crossorigin="anonymous"
    />
    <style>
      body {
        background-color: #121212;
        color: #f8f9fa;
      }
      .highlight {
        color: #ffc107;
      }
      /* Custom alert styling */
      #alertMessage {
        position: fixed;
        top: 1rem;
        left: 50%;
        transform: translateX(-50%);
        min-width: 300px;
        max-width: 600px;
        z-index: 1050;
        border-radius: 8px;
        padding: 1rem 1.5rem;
        box-shadow: 0 0 10px rgba(255, 193, 7, 0.7);
        font-weight: 600;
        text-align: center;
      }
      #alertMessage.success {
        background-color: #28a745;
        color: white;
      }
      #alertMessage.error {
        background-color: #dc3545;
        color: white;
      }
      #alertMessage.info {
        background-color: #17a2b8;
        color: white;
      }
    </style>
  </head>
  <body>
    <% if (typeof message !== "undefined" && message &&
    (message.toLowerCase().includes('failed') ||
    message.toLowerCase().includes('error') ||
    message.toLowerCase().includes('no'))) { %>
    <div id="alertMessage" class="error"><%= message %></div>
    <% } %>

    <div class="container mt-5 pt-5">
      <h1 class="text-center mb-4">Manage Customers</h1>
      <div class="table-responsive">
        <table class="table table-striped table-dark table-hover">
          <thead>
            <tr>
              <th class="text-success">ID</th>
              <th class="text-danger">Role</th>
              <th class="text-primary">First Name</th>
              <th class="text-warning">Last Name</th>
              <th class="text-info">Email</th>
              <th style="color: pink">Phone Number</th>
              <th>Edit</th>
              <th>Delete</th>
            </tr>
          </thead>
          <tbody>
            <% if (users.length > 0) { %> <% users.forEach(user => { %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.role %></td>
              <td><%= user.firstName %></td>
              <td><%= user.lastName %></td>
              <td><%= user.email %></td>
              <td><%= user.phoneNbr %></td>
              <td>
                <a
                  href="/api/users/editCustomer/<%= user.id %>"
                  class="btn btn-outline-warning btn-sm"
                >
                  Edit
                </a>
              </td>
              <td>
                <button
                  type="button"
                  class="btn btn-outline-danger btn-sm"
                  onclick="showDeleteModal('<%= user.id %>')"
                >
                  Delete
                </button>
              </td>
            </tr>
            <% }) %> <% } else { %>
            <tr>
              <td colspan="8" class="text-center">No customers found.</td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Bootstrap Delete Confirmation Modal -->
    <div
      class="modal fade"
      id="confirmDeleteModal"
      tabindex="-1"
      aria-labelledby="confirmDeleteModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-dark text-light">
          <div class="modal-header">
            <h5 class="modal-title" id="confirmDeleteModalLabel">
              Confirm Delete
            </h5>
            <button
              type="button"
              class="btn-close btn-close-white"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            Are you sure you want to delete this customer?
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Cancel
            </button>
            <button type="button" id="modalConfirmBtn" class="btn btn-danger">
              Delete
            </button>
          </div>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"
      crossorigin="anonymous"
    ></script>

    <script>
      let userIdToDelete = null;
      const deleteModalEl = document.getElementById("confirmDeleteModal");
      const deleteModal = new bootstrap.Modal(deleteModalEl);

      function showDeleteModal(id) {
        userIdToDelete = id;
        deleteModal.show();
      }

      document
        .getElementById("modalConfirmBtn")
        .addEventListener("click", () => {
          if (!userIdToDelete) return;

          fetch(`/api/users/${userIdToDelete}`, {
            method: "DELETE",
            headers: {
              "Content-Type": "application/json",
            },
          })
            .then((res) => {
              if (res.ok) {
                location.reload();
              } else {
                showAlert("Failed to delete customer", "error");
              }
            })
            .catch((err) => {
              console.error("Error deleting user:", err);
              showAlert("An error occurred", "error");
            });

          deleteModal.hide();
        });

      // Custom alert function
      function showAlert(message, type = "info") {
        const existingAlert = document.getElementById("alertMessage");
        if (existingAlert) existingAlert.remove();

        const alertDiv = document.createElement("div");
        alertDiv.id = "alertMessage";
        alertDiv.className = type;
        alertDiv.textContent = message;

        alertDiv.style.position = "fixed";
        alertDiv.style.top = "1rem";
        alertDiv.style.left = "50%";
        alertDiv.style.transform = "translateX(-50%)";
        alertDiv.style.minWidth = "300px";
        alertDiv.style.maxWidth = "600px";
        alertDiv.style.zIndex = "1050";
        alertDiv.style.borderRadius = "8px";
        alertDiv.style.padding = "1rem 1.5rem";
        alertDiv.style.boxShadow = "0 0 10px rgba(255, 193, 7, 0.7)";
        alertDiv.style.fontWeight = "600";
        alertDiv.style.textAlign = "center";
        alertDiv.style.color = "white";
        alertDiv.style.backgroundColor =
          type === "success"
            ? "#28a745"
            : type === "error"
            ? "#dc3545"
            : "#17a2b8";

        document.body.appendChild(alertDiv);

        setTimeout(() => {
          alertDiv.style.transition = "opacity 0.5s ease";
          alertDiv.style.opacity = "0";
          setTimeout(() => alertDiv.remove(), 500);
        }, 5000);
      }

      // Auto-hide alert on initial page load (for server-rendered message)
      window.onload = () => {
        const alertEl = document.getElementById("alertMessage");
        if (alertEl) {
          setTimeout(() => {
            alertEl.style.transition = "opacity 0.5s ease";
            alertEl.style.opacity = "0";
            setTimeout(() => alertEl.remove(), 500);
          }, 5000);
        }
      };
    </script>
  </body>
</html>
